{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "package.json",
          ".nuxt/content/**",
          "content/**",
          "./.nuxt/dist/sitemap-routes.json",
          "api/**"
        ],
        "internalServer": true
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/index",
      "dest": "/api/index.js"
    }
  ]
}